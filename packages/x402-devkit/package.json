{
  "name": "x402-mantle-sdk",
  "version": "0.1.0",
  "description": "Complete SDK for x402 paid APIs on Mantle Network - server middleware and client payments",
  "type": "module",
  "exports": {
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.js"
      },
      "require": {
        "types": "./dist/server/index.d.cts",
        "default": "./dist/server/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client/index.d.ts",
        "default": "./dist/client/index.js"
      },
      "require": {
        "types": "./dist/client/index.d.cts",
        "default": "./dist/client/index.cjs"
      }
    },
    "./client/react": {
      "import": {
        "types": "./dist/client/react.d.ts",
        "default": "./dist/client/react.js"
      },
      "require": {
        "types": "./dist/client/react.d.cts",
        "default": "./dist/client/react.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "x402",
    "mantle",
    "payment",
    "api",
    "monetization",
    "hono",
    "middleware",
    "web3",
    "blockchain",
    "http-402",
    "wallet"
  ],
  "author": "x402-devkit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x402-devkit/x402.git"
  },
  "bugs": {
    "url": "https://github.com/x402-devkit/x402/issues"
  },
  "homepage": "https://x402.dev",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "hono": "^4.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "hono": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
