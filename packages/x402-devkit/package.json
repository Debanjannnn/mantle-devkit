{
  "name": "x402-mantle-sdk",
  "version": "0.2.8",
  "description": "Complete SDK for monetizing APIs with HTTP 402 payments on Mantle Network. Protect API routes, handle payments automatically, and track revenue.",
  "type": "module",
  "exports": {
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.js"
      },
      "require": {
        "types": "./dist/server/index.d.cts",
        "default": "./dist/server/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client/index.d.ts",
        "default": "./dist/client/index.js"
      },
      "require": {
        "types": "./dist/client/index.d.cts",
        "default": "./dist/client/index.cjs"
      }
    },
    "./client/react": {
      "import": {
        "types": "./dist/client/react.d.ts",
        "default": "./dist/client/react.js"
      },
      "require": {
        "types": "./dist/client/react.d.cts",
        "default": "./dist/client/react.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "x402",
    "http-402",
    "mantle",
    "mantle-network",
    "payment",
    "payments",
    "api",
    "monetization",
    "monetize",
    "hono",
    "express",
    "middleware",
    "web3",
    "blockchain",
    "wallet",
    "ethereum",
    "layer2",
    "l2",
    "micropayments",
    "api-monetization",
    "paid-api",
    "payment-gateway",
    "blockchain-payments"
  ],
  "author": "x402-devkit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Debanjannnn/x-402-mantle-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Debanjannnn/x-402-mantle-sdk/issues"
  },
  "homepage": "https://mantle-devkit.vercel.app",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0",
    "hono": "^4.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "hono": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "express": "^4.21.0",
    "hono": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
